{
    "name": "__MSG_appName__",
    "version": "0.0.7",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/jquery.js",
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "http://kinja.com/*",
                "http://gawker.com/*",
                "http://deadspin.com/*",
                "http://jezebel.com/*",
                "http://lifehacker.com/*",
                "http://kotaku.com/*",
                "http://io9.com/*",
                "http://jalopnik.com/*",
                "http://gizmodo.com/*",
                "http://*.kinja.com/*",
                "http://*.gawker.com/*",
                "http://*.deadspin.com/*",
                "http://*.jezebel.com/*",
                "http://*.lifehacker.com/*",
                "http://*.kotaku.com/*",
                "http://*.io9.com/*",
                "http://*.jalopnik.com/*",
                "http://*.gizmodo.com/*"
            ],
            "css": [
                "styles/main.css"
            ],
            "js": [
                "scripts/jquery.js",
                "scripts/moment.js",
                "scripts/underscore.js",
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
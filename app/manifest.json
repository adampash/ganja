{
    "name": "__MSG_appName__",
    "version": "0.0.7",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-64.png",
        "128": "images/icon-64.png"
    },
    "default_locale": "en",
    "browser_action": {
      "default_icon": {                    // optional
        "19": "images/icon-64.png",           // optional
        "38": "images/icon-64.png",           // optional
        "64": "images/icon-64.png"           // optional
        // "38": "images/icon38.png"            // optional
      },
      "default_title": "Kinja+",      // optional; shown in tooltip
      "default_popup": "options.html"        // optional
    },
    "background": {
        "scripts": [
            "scripts/config.js",
            "scripts/jquery.js",
            "scripts/socket.io.js",
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "http://kinja.com/*",
                "http://gawker.com/*",
                "http://deadspin.com/*",
                "http://jezebel.com/*",
                "http://lifehacker.com/*",
                "http://kotaku.com/*",
                "http://io9.com/*",
                "http://jalopnik.com/*",
                "http://gizmodo.com/*",
                "http://*.kinja.com/*",
                "http://*.gawker.com/*",
                "http://*.deadspin.com/*",
                "http://*.jezebel.com/*",
                "http://*.lifehacker.com/*",
                "http://*.kotaku.com/*",
                "http://*.io9.com/*",
                "http://*.jalopnik.com/*",
                "http://*.gizmodo.com/*"
            ],
            "css": [
                "styles/socializer.css"
            ],
            "js": [
                "scripts/config.js",
                "scripts/jquery.js",
                "scripts/underscore.js",
                "scripts/backbone.js",
                "scripts/moment.js",
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ]
}
